{
  "extends": "astro/tsconfigs/strict",
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~ui/*": ["src/components/ui/*"]
    }
  },
  "include": ["src/**/*", "*.ts", "*.tsx", "*.astro/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
