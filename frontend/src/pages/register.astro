---
import { RegisterForm } from '~/components/RegisterForm'
import Main from '~/layouts/Main.astro'
---

<Main>
  <main class="flex min-h-[calc(100vh-6rem)] items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-zinc-900">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-zinc-100">Create an account</h1>
        <p class="mt-2 text-zinc-400">Sign up to get started</p>
      </div>
      <RegisterForm client:load redirectUrl="/" />
      <div class="mt-6 text-center">
        <p class="text-zinc-400">
          Already have an account? 
          <a href="/login" class="text-blue-500 hover:text-blue-400">
            Sign in
          </a>
        </p>
      </div>
    </div>
  </main>
</Main> 
